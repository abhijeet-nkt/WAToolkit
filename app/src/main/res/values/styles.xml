<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Did this on Client request -->
        <item name="colorPrimary">@color/colorAppBlue</item>
        <item name="colorPrimaryDark">@color/colorAppBlueDark</item>
        <item name="colorAccent">@color/colorAppBlue</item>

        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColorLight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Theme.MaterialComponents">
        <item name="android:textAppearance">@style/Base.TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">?attr/colorAccent</item>
    </style>

</resources>
